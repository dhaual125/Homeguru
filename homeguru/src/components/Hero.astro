<section class="hero">
  <div class="hero-gradient"></div>
  <div class="container">
    <div class="hero-content">
      <div class="badge">India's Sovereign Home Services Platform</div>
      <h1>Home Services for all from India</h1>
      <p>Built on trusted professionals. Powered by expert care.<br/>Delivering household-scale impact.</p>
      <button class="cta-button">Experience HomeGuru</button>
    </div>
  </div>
  
  <div class="partners">
    <p class="partners-label">India trusts HomeGuru</p>
    <div class="logo-carousel">
      <div class="logo-track">
        {[...Array(10)].map(() => (
          <div class="logo-item">Partner</div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 8rem;
    overflow: hidden;
  }

  .hero-gradient {
    position: absolute;
    top: -80%;
    left: 50%;
    transform: translateX(-50%);
    width: 220%;
    height: auto;
    opacity: 0.4;
    background: radial-gradient(ellipse, #A5BBFC 0%, #D5E2FF 40%, transparent 70%);
    filter: blur(100px);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(16px);
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    border: 1px solid rgba(165, 187, 252, 0.6);
    font-weight: 600;
    font-size: 0.875rem;
    color: #0A2156;
    margin-bottom: 2rem;
    box-shadow: 0px 0px 60px 0px rgba(85,106,220,0.12);
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 400;
    line-height: 1.05;
    margin-bottom: 1.5rem;
    color: #1a1a1a;
  }

  p {
    font-size: clamp(1rem, 2vw, 1.375rem);
    line-height: 1.6;
    color: #666;
    margin-bottom: 2.5rem;
  }

  .cta-button {
    background: #131313;
    color: white;
    padding: 1rem 2rem;
    border-radius: 9999px;
    border: none;
    font-size: 1.125rem;
    font-weight: 500;
    cursor: pointer;
    box-shadow: inset 0 0 12px rgba(255,255,255,1);
    transition: transform 0.3s;
  }

  .cta-button:hover {
    transform: scale(1.05);
  }

  .partners {
    margin-top: 4rem;
    width: 100%;
  }

  .partners-label {
    text-align: center;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: #999;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .logo-carousel {
    overflow: hidden;
    width: 100%;
    mask: linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%);
  }

  .logo-track {
    display: flex;
    gap: 4rem;
    animation: scroll 30s linear infinite;
  }

  .logo-item {
    flex-shrink: 0;
    width: 150px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    filter: grayscale(100%) brightness(0.8);
    opacity: 0.7;
    font-weight: 500;
    color: #666;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
